#!/bin/sh

CWD=`pwd`
TMP=${TMP:-/tmp}
PKG=$TMP/package-Gtk2

VERSION=1.120
ARCH=${ARCH:-i486}
BUILD=2

if [ -f /var/log/packages/Gtk2-$VERSION-$ARCH-$BUILD ]; then
  echo "Gtk2-$VERSION-$ARCH-$BUILD package already installed"
  exit 0
fi

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
rm -rf $PKG
mkdir -p $PKG

cd $TMP
tar -xzvf $CWD/Gtk2-$VERSION.tar.gz
cd Gtk2-$VERSION

# Apply $ARCH specific patches
if [ "$ARCH" = "i386" ]; then
  echo "Applying patches for $ARCH"
  #cat $CWD/foo.patch | patch -p0 --verbose
elif [ "$ARCH" = "i486" ]; then
  echo "Applying patches for $ARCH"
  #cat $CWD/foo.patch | patch -p0 --verbose
elif [ "$ARCH" = "s390" ]; then
  echo "Applying patches for $ARCH"
  #cat $CWD/foo.patch | patch -p0 --verbose
elif [ "$ARCH" = "powerpc" ]; then
  echo "Applying patches for $ARCH"
  #cat $CWD/foo.patch | patch -p0 --verbose
elif [ "$ARCH" = "x86_64" ]; then
  echo "Applying patches for $ARCH"
  #cat $CWD/foo.patch | patch -p0 --verbose
fi

perl Makefile.PL || exit 1
make || exit 1
make install DESTDIR=$PKG

# Move man directory into /usr
(
  cd $PKG/usr/share
  mv man ..
  cd ..
  rmdir share
)

# remove perllocal.pod
PERLVERSION=5.8.6
(
  cd $PKG/usr/lib/perl5/$PERLVERSION/$ARCH-linux/
  rm -f perllocal.pod
  cd ..
  rmdir $ARCH-linux
  cd ..
  rmdir $PERLVERSION
)

chown -R root.bin $PKG/usr/bin

mkdir -p $PKG/usr/doc/Gtk2-$VERSION
cp -a AUTHORS COPYING ChangeLog INSTALL NEWS README \
        TODO \
        $PKG/usr/doc/Gtk2-$VERSION
find $PKG/usr/doc/Gtk2-$VERSION/ -type f -exec chmod 644 {} \;
chown root.root $PKG/usr/doc/Gtk2-$VERSION/*

# strip:
( cd $PKG
  find . | xargs file | grep "executable" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null
  find . | xargs file | grep "shared object" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null
)

gzip -9 $PKG/usr/man/*/*
gzip -9 $PKG/usr/info/*

mkdir -p $PKG/install
cat $CWD/slack-required > $PKG/install/slack-required
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
makepkg -l y -c n $TMP/Gtk2-$VERSION-$ARCH-$BUILD.tgz

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/Gtk2-$VERSION
  rm -rf $PKG
fi
