#!/bin/sh

if [ -r ../GSB.options ]; then
  . ../../GSB.options
fi

TMP=${TMP:-/tmp}

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi

# faad2 and faac have a hard time building if mpeg4ip is installed, so
# we remove it and then reinstall later
/sbin/removepkg mpeg4ip

# remove because they depend on an old version of libvisual
#libvisual-nebulus
#libvisual-xmms

BUILD_ORDER="a52dec
divx4linux
mpeg4ip
ffmpeg
id3lib
faad2
faac
libcdaudio
libcddb
libcdio
libdv
libdvbpsi3
libdvdcss
libdvdnav
libdvdread
libdvdplay
libebml
libfame
libmatroska
libmms
libmovtar
libmusicbrainz
liboil
libraw1394
libavc1394
libsndfile
libsamplerate
libquicktime
libvisual
libvisual-plugins
lame
mjpegtools
mpeg2dec
libmusepack
normalize
openslp
polypaudio
swfdec
libtheora
xvidcore
transcode
avifile
heimdal
cyrus-sasl
openldap
"

(

for i in $BUILD_ORDER
do
(
  cd $i
  echo ""
  echo "*************************************************"
  echo "*****   Building $i"
  echo "*************************************************"
  echo ""
  ./$i.SlackBuild
  upgradepkg --install-new $TMP/$i*.tgz
)
done

for i in openh323-pwlib
do
(
  cd $i
  echo ""
  echo "*************************************************"
  echo "*****   Building $i"
  echo "*************************************************"
  echo ""
  ./$i.SlackBuild
  upgradepkg --install-new $TMP/openh323*.tgz $TMP/pwlib*.tgz
)
done

# Fork screen output to a log
) 2>&1 | tee $TMP/gnome.desktop_reqs.build.log
