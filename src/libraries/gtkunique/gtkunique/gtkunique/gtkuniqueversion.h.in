#ifndef __GTK_UNIQUE_VERSION_H__
#define __GTK_UNIQUE_VERSION_H__

#define GTK_UNIQUE_MAJOR_VERSION        @GTK_UNIQUE_MAJOR_VERSION@
#define GTK_UNIQUE_MINOR_VERSION        @GTK_UNIQUE_MINOR_VERSION@
#define GTK_UNIQUE_MICRO_VERSION        @GTK_UNIQUE_MICRO_VERSION@

#define GTK_UNIQUE_API_VERSION          @GTK_UNIQUE_API_VERSION@

#define GTK_UNIQUE_CHECK_VERSION(major,minor,micro) \
        ((GTK_UNIQUE_MAJOR_VERSION > (major)) || \
         (GTK_UNIQUE_MAJOR_VERSION == (major) && GTK_UNIQUE_MINOR_VERSION > (minor)) || \
         (GTK_UNIQUE_MAJOR_VERSION == (major) && GTK_UNIQUE_MINOR_VERSION == (minor) && \
          GTK_UNIQUE_MICRO_VERSION > (micro)))

#endif /* __GTK_UNIQUE_VERSION_H__ */
