# This is here so that we can hopefully not break anything, still have our dbus
# hooks so that NetworkManager can work, and people can still deploy their own
# local stuff like ddnsclient hooks.
for exit_hook in /etc/dhclient-exit-hooks.d/*.sh; do
	if [ -x $exit_hook ]; then
		. $exit_hook
		if [ $exit_status -ne 0 ]; then
			break
		fi
	fi
done
unset exit_hook
