#
# Site Apache Options (deny indexes, disable SSI, and disable CGI)
#
Options -Indexes -Includes -ExecCGI

#
# Direcory Index Options
#
DirectoryIndex 

#
# mod_rewite rules - make URI's friendly and easy to document/recite/remember
#
RewriteEngine On
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^.*$ - [S=50]
    RewriteRule ^news/?$ /?news_page=0 [QSA,L]
    RewriteRule ^news/?([0-9]{1,})/?$ /?news_page=$1 [QSA,L]
    RewriteRule ^packages/?$ /?op=packages [QSA,L]
    RewriteRule ^packages/ver/(.*)/dir/(.*)?$ /?op=packages&mode=browse&ver=$1&dir=$2 [QSA,L]
    RewriteRule ^packages/ver/(.*)/info/(.*)$ /?op=packages&mode=pack&ver=$1&path=$2 [QSA,L]
    RewriteRule ^changelog/(.*)?$ /?op=changelog&frg_ver=$1 [QSA,L]
    RewriteRule ^about/?$  /?op=about [QSA,L]
    RewriteRule ^download/?$  /?op=download [QSA,L]
    RewriteRule ^downloads/?$  /?op=download [QSA,L]
    RewriteRule ^development/?$  /?op=development [QSA,L]
    RewriteRule ^help/?$  /?op=help [QSA,L]
    RewriteRule ^installation/?$  /?op=installation [QSA,L]
    RewriteRule ^links/?$  /?op=links [QSA,L]
    RewriteRule ^roadmap/?$  /?op=roadmap [QSA,L]
    RewriteRule ^screenshots/?$  /?op=screenshots [QSA,L]
    RewriteRule ^support/?$  /?op=support [QSA,L]
    RewriteRule ^todo/?$  /?op=todo [QSA,L]
    RewriteRule ^faqs/?$  /?op=faqs [QSA,L]

#
# special files to deny a web browser from peeking at
#
<Files ~ "(\.(sh|html)|(.*)_inc\.php)$">
  Order deny,allow
  Deny from all
</Files>

#
# error handling
#
ErrorDocument 404 /?op=http_error&errno=404
ErrorDocument 403 /?op=http_error&errno=403
ErrorDocument 401 /?op=http_error&errno=401

