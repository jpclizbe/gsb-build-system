#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES EXTRAS APPLETS AND EXTENSIONS" \
--checklist "Please select the packages you wish to install \
from the Extras Applets and Extensions series. This set contains optional packages \
that provide applets for gnome-panel and extensions for nautilus. \\n\\n\
" 22 70 8 \
"contact-lookup-applet" "" "on" \
"deskbar-applet" "" "on" \
"fast-user-switch-applet" "" "on" \
"lock-keys-applet" "" "on" \
"mail-notification" "" "on" \
"nautilus-open-terminal" "" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
  rm -f $TMP/SeTpkgs
  cat /dev/null > $TMP/SeTnewtag
  for PKG in contact-lookup-applet deskbar-applet fast-user-switch-applet lock-keys-applet mail-notification nautilus-open-terminal ; do 
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  done
  exit
fi
cat /dev/null > $TMP/SeTnewtag
  for PKG in contact-lookup-applet deskbar-applet fast-user-switch-applet lock-keys-applet mail-notification nautilus-open-terminal ; do 
  if grep \"$PKG\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
    echo "$PKG: ADD" >> $TMP/SeTnewtag
  else
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  fi
done
rm -f $TMP/SeTpkgs
