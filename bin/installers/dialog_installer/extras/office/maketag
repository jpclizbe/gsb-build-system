#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES EXTRAS OFFICE" \
--checklist "Please select the packages you wish to install \
from the Extras Office series. This set contains packages \
that provide GNOME Office. \\n\\n\
" 22 70 8 \
"abiword" "" "on" \
"aiksaurus" "" "on" \
"enchant" "" "on" \
"fribidi" "" "on" \
"gnumeric" "" "on" \
"goffice" "" "on" \
"libgda" "" "on" \
"libgnomedb" "" "on" \
"libwmf" "" "on" \
"libwpd" "" "on" \
"ots" "" "on" \
"planner" "" "on" \
"present" "" "on" \
"psiconv" "" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
  rm -f $TMP/SeTpkgs
  cat /dev/null > $TMP/SeTnewtag
  for PKG in abiword aiksaurus enchant fribidi gnumeric goffice libgda libgnomedb libwmf libwpd ots planner present psiconv ; do
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  done
  exit
fi
cat /dev/null > $TMP/SeTnewtag
for PKG in abiword aiksaurus enchant fribidi gnumeric goffice libgda libgnomedb libwmf libwpd ots planner present psiconv ; do
  if grep \"$PKG\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
    echo "$PKG: ADD" >> $TMP/SeTnewtag
  else
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  fi
done
rm -f $TMP/SeTpkgs
