#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES EXTRAS MONO" \
--checklist "Please select the packages you wish to install \
from the GNOME Desktop Requirements series. This set contains optional packages \
that provide the Mono Environment and applications based on Mono. \\n\\n\
" 22 70 8 \
"avahi-sharp" "" "on" \
"banshee" "" "on" \
"beagle" "" "on" \
"boo" "" "on" \
"dbus-sharp" "" "on" \
"f-spot" "" "on" \
"gecko-sharp-2.0" "" "on" \
"gmime-sharp" "" "on" \
"gtk-sharp" "" "on" \
"gtk-sharp2" "" "on" \
"gtksourceview-sharp-2.0" "" "on" \
"ikvm" "" "on" \
"ipod-sharp" "" "on" \
"libgdiplus" "" "on" \
"libipoddevice" "" "on" \
"mono" "" "on" \
"monodevelop" "" "on" \
"monodoc" "" "on" \
"njb-sharp" "" "on" \
"sqlite2" "" "on" \
"sqlite3" "" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
  rm -f $TMP/SeTpkgs
  cat /dev/null > $TMP/SeTnewtag
  for PKG in avahi-sharp banshee beagle boo dbus-sharp f-spot gecko-sharp-2.0 gmime-sharp gtk-sharp gtk-sharp2 gtksourceview-sharp-2.0 ikvm ipod-sharp libgdiplus libipoddevice mono monodevelop monodoc njb-sharp sqlite2 sqlite3 ; do
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  done
  exit
fi
cat /dev/null > $TMP/SeTnewtag
for PKG in avahi-sharp banshee beagle boo dbus-sharp f-spot gecko-sharp-2.0 gmime-sharp gtk-sharp gtk-sharp2 gtksourceview-sharp-2.0 ikvm ipod-sharp libgdiplus libipoddevice mono monodevelop monodoc njb-sharp sqlite2 sqlite3 ; do
  if grep \"$PKG\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
    echo "$PKG: ADD" >> $TMP/SeTnewtag
  else
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  fi
done
rm -f $TMP/SeTpkgs
