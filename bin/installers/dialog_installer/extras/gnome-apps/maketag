#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES EXTRAS GNOME APPS" \
--checklist "Please select the packages you wish to install \
from the EXTRAS GNOME APPS. This set contains optional applications \
that are based on GNOME. \\n\\n\
" 22 70 8 \
"gnome-audio" "" "on" \
"gnome-commander" "" "on" \
"gnome-cups-manager" "" "on" \
"gnome-phone-manager" "" "on" \
"gnome-power-manager" "" "on" \
"gthumb" "" "on" \
"meld" "" "on" \
"pessulus" "" "on" \
"rhythmbox" "" "on" \
"sabayon" "" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
  rm -f $TMP/SeTpkgs
  cat /dev/null > $TMP/SeTnewtag
for PKG in gnome-audio gnome-commander gnome-cups-manager gnome-phone-manager gnome-power-manager gthumb meld pessulus rhythmbox sabayon ; do
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  done
  exit
fi
cat /dev/null > $TMP/SeTnewtag
for PKG in gnome-audio gnome-commander gnome-cups-manager gnome-phone-manager gnome-power-manager gthumb meld pessulus rhythmbox sabayon ; do
  if grep \"$PKG\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
    echo "$PKG: ADD" >> $TMP/SeTnewtag
  else
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  fi
done
rm -f $TMP/SeTpkgs
