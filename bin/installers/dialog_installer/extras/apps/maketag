#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES EXTRAS APPS" \
--checklist "Please select the packages you wish to install \
from the Extras Apps series. This set contains optional packages \
that provide GNOME/GTK+ applications. \\n\\n\
" 22 70 8 \
"anjuta" "" "on" \
"avidemux" "" "on" \
"balsa" "" "on" \
"bluefish" "" "on" \
"bmpx" "" "on" \
"drivel" "" "on" \
"dvgrab" "" "on" \
"easytag" "" "on" \
"gDesklets" "" "on" \
"gaim" "" "on" \
"gftp" "" "on" \
"ghex" "" "on" \
"gimp" "" "on" \
"gossip" "" "on" \
"gslapt" "" "on" \
"gtkam" "" "on" \
"gtkpod" "" "on" \
"inkscape" "" "on" \
"kino" "" "on" \
"liferea" "" "on" \
"pstoedit" "" "on" \
"skencil" "" "on" \
"slapt-get" "" "on" \
"streamripper" "" "on" \
"streamtuner" "" "on" \
"sylpheed" "" "on" \
"xchat" "" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
  rm -f $TMP/SeTpkgs
  cat /dev/null > $TMP/SeTnewtag
for PKG in anjuta avidemux balsa bluefish bmpx drivel dvgrab easytag gDesklets gaim gftp ghex gimp gossip gslapt gtkam gtkpod inkscape kino liferea pstoedit skencil slapt-get streamripper streamtuner sylpheed xchat ; do 
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  done
  exit
fi
cat /dev/null > $TMP/SeTnewtag
for PKG in anjuta avidemux balsa bluefish bmpx drivel dvgrab easytag gDesklets gaim gftp ghex gimp gossip gslapt gtkam gtkpod inkscape kino liferea pstoedit skencil slapt-get streamripper streamtuner sylpheed xchat ; do 
  if grep \"$PKG\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
    echo "$PKG: ADD" >> $TMP/SeTnewtag
  else
    echo "$PKG: SKP" >> $TMP/SeTnewtag
  fi
done
rm -f $TMP/SeTpkgs
